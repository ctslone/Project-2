<div class="container">
    <h1 id="main-res-title" class="center">Movie Results</h1>

    <div class="container">
        <div class="row">
            {{#each results}}
            <div data-imdbid="{{imdbID}}" class="card col l2 sticky-action" id="results-card">
                <div class="card-image waves-effect waves-block waves-light">
                    <img id="poster-img" class="activator responsive-img" src="{{Poster}}">
                </div>
                <div id="results-content" class="card-content">

                    <div id="movie-title-div" class="center-align valign-wrapper">
                        <p id="movie-title">{{Title}}</p>
                    </div>
                    
                    <div id="boats-div" class="center-align" >
                        {{#if source}}
                            <a id="up-boat"><i class="material-icons left up-boat" data-imdbid="{{imdbID}}">keyboard_arrow_up</i></a>
                            <span>{{boatsValue}}</span>
                            <a id="down-boat"><i class="material-icons right down-boat" data-imdbid="{{imdbID}}">keyboard_arrow_down</i></a>
                        {{else}}
                        <a class="waves-effect waves-light btn-small add-movie" data-imdbid="{{imdbID}}"><i class="material-icons right">favorite</i>Add</a>
                        {{/if}}
                    </div>
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">{{Title}}<i
                            class="material-icons right">close</i></span>
                    <ul>
                        <li>Year: {{Year}}</li>
                        <li class = "rating">Rating: </li>
                        <br>
                        {{!-- <li class = "Genre">Genre: </li> --}}
                        <li class = "plot">Plot: </li>
                        
                    </ul>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/searchMovie.js"></script>